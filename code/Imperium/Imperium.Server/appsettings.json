{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "/var/log/imperium.log",
                    "rollingInterval": "Day"
                }
            }
        ]
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "State": {
        "IsReadonlyMode": false,
        "ConfigurationPath": "/imperium/data"
    },
    "AllowedHosts": "*",
    "Origins": [ "*" ],
    "HttpClient": {
        "ConnectionLifeTime": "00:01:00",
        "Timeout": "00:00:05",
        "ConnectTimeout": "00:00:05",
        "ResponseDrainTimeout": "00:00:05"
    },
    "Timer": {
        "MaxConsecutiveExceptions": 10,
        "LoopExceptionSleep": 10000,
        "LoopIterationSleep": 10000
    },
    "DeviceController": {
        "MaxConsecutiveExceptions": 10,
        "LoopExceptionSleep": 10000,
        "LoopIterationSleep": 100
    },
    "FlowExecutor": {
        "MaxConsecutiveExceptions": 10,
        "LoopExceptionSleep": 2000,
        "LoopIterationSleep": 100
    },
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://0.0.0.0:5000"
            },
            "WebSocket": {
                "Url": "http://0.0.0.0:5001"
            }
        }
    }
}
